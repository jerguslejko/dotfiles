[user]
	name = jerguslejko
	email = jergus.lejko@gmail.com

[core]
    ignorecase = false
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes

[alias]
    undo = "! ~/.dotfiles/git/undo"
    nah = "! ~/.dotfiles/git/nah"
    wip = "! ~/.dotfiles/git/wip"
    amend = "commit --amend"
    squash = "commit --amend --no-edit"
    aa = "add ."
    ci = "commit"
    co = "checkout"
    about = "!git diff $(git describe --tags --abbrev=0) master"

[pager]
    branch = false

[diff "nodiff"]
    command = /usr/bin/true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[color]
    ui = true

[format]
	pretty = %C(yellow)%h%C(auto)%d %C(bold)%s%Creset %C(dim)by %cn, %cr
