[user]
	name = jerguslejko
	email = jergus.lejko@gmail.com

[core]
    ignorecase = false
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes

[alias]
    undo = "reset HEAD~"
    search = "!f() { git grep $1 $(git rev-list --all); }; f"

[pager]
    branch = false

[diff "nodiff"]
    command = /usr/bin/true

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[help]
	autocorrect = 1

[push]
    default = matching

[color]
    ui = true
