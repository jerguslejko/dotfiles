[user]
	name = jerguslejko
	email = jergus.lejko@gmail.com

[core]
    ignorecase = false
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes

[alias]
    undo = "! ~/.dotfiles/git/undo"
    nah = "! ~/.dotfiles/git/nah"
    wip = "! ~/.dotfiles/git/wip"
    amend = "commit --amend --edit"
    aa = "add ."
    ci = "commit"
    co = "checkout"
    l = "log --oneline"

[pager]
    branch = false

[diff "nodiff"]
    command = /usr/bin/true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[color]
    ui = true
