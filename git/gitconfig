[user]
    name = jerguslejko
    email = jergus.lejko@gmail.com
[core]
    excludesfile = /Users/jergus/.gitignore
    ignorecase = false
[alias]
    ignorefile = "!echo '*\n!.gitignore'"
    sweep = "! f() { git branch -r --merged | grep \"$1/\" | grep -v master | sed \"s|$1/||\" | xargs -n 1 git push --delete \"$1\" ; }; f"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
